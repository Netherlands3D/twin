.textcallout {
    --textcallout-bg-color: var(--color-blue-50);
    --textcallout-border-radius: var(--spacing-1);

    background-color: var(--textcallout-bg-color);
    padding-left: var(--spacing-5);
    padding-right: var(--spacing-5);
    padding-top: var(--spacing-2);
    padding-bottom: var(--spacing-2);
    border-radius: var(--textcallout-border-radius);
}

.textcallout > #Label {
    white-space: normal;
}
